<!doctype html>
<html>
<head>
    <title>Hoboken Restaurant</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link  rel="stylesheet" href="../../public/css/headerNav.css" type="text/css">
    <link  rel="stylesheet" href="../../public/css/loginSignup.css" type="text/css">

</head>
<body>
     <nav role="navigation" class="navbar navbar-custom navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" href="/">Hoboken Restaurant</a>
    </div>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/">HOME</a></li>
        <li><a href="/reviews/cuisine">CUISINE</a></li>
        <li><a href="/reviews/rating">RATING</a></li>
        <li><a href="/reviews/nearby">POPULAR</a></li>
        <li><a href="/profile"><span class="glyphicon glyphicon-user"></span> &nbsp;PROFILE</a></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown">ACCOUNT
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li class="list"><a href="/login"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp;LOG IN</a></li>
            <li class="list"><a href="/signup"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp;SIGN UP</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

 
<div class="container">
    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/restaurants" class="btn btn-default btn-sm">Restaurant</a>
        <a href="/ADM"  class="btn btn-default btn-sm">Administor</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h2><span class="fa fa-user"></span> Local</h2>

                {{#if user.local.email}}
                <p>
                    <strong>id</strong>: {{user._id}}<br>
                    <strong>username</strong>: {{user.local.email}}<br>
                    {{!-- <strong>password</strong>: {{user.local.password }} --}}
                </p>
                {{/if}}
            </div>
        </div>

       
    </div>
        <div class="container frame">
        <h2 class="text-center">My Reviews</h2>
       
        </br>


        <div class="row">
           {{#each reviews}}
           <div class="well">
                <div class="singleReview">
                    <p class="red"> <i class="fa fa-cutlery" aria-hidden="true"></i>&nbsp; {{this.restaurantName}} </p>
                    <p class="red"><span class="glyphicon glyphicon-star-empty"></span> &nbsp; {{this.reviewer_like}} </p>
                    <div class="certainReview"><p ><span class="glyphicon glyphicon-pencil red"> </span>&nbsp; {{this.review}} </p></div>
                </div>
            </div>
            {{/each}}
        </div>
    </div> 
</div>
</body>
</html>
