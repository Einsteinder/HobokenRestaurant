  <body>

    {{>header}}

    <div class="jumbotron">
      <div class="container">
         <p><a class="btn btn-lg learnmore" href="/restaurants/all" role="button">Learn more &raquo;</a></p>
      </div>
    </div>

    <div class="container">
      <div class="row" >
          {{#each bars}}
           <div class="col-md-4">
             <div class="panel">
              <h4>{{this.R_name}}</h4>
              <p>{{this.R_location}}</p>
              <a class="btn more" href="/restaurants/{{this._id}}" role="button">More &raquo;</a></p>     
            </div>
           </div>
          {{/each}}    
      </div>   
      <hr>

      {{>footer}} 
    </div> 

  </body>
