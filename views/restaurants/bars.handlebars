    <style>
      body{
        background: #FEF2E9;
      }
      p,h4,h3,h2{
        color:#826962;
      }
      .panel{
        text-align: center;
        background: rgba(244, 190, 152, 0.1);
       
      }
      .more{
        background:#826962;
        color:white;
      }
      .row{
        margin-top:30px;
      }
