    </div>
    </div>

    <div class="container">
      <div class="row" >
          {{#each theRestaurants}}
           <div class="col-md-6">
             <div class="panel">
                  <a href="/restaurants/{{this._id}}" class="name">
                    <h4><span class="glyphicon glyphicon-cutlery"></span> {{this.R_name}}</h4> 
                  </a>
             
                <p>{{this.R_location}}</p>
                <p>{{this.R_cuisine}}</p>
                <p>
                  <a  href="/restaurants/{{this._id}}"  class="btn rate">
                    <span class="glyphicon glyphicon-star-empty"></span>{{this.R_averageaLike}}
                  </a>
                 </p>  
             </div>      
           </div>
          {{/each}}  
      </div>   
      <hr>

      {{>footer}} 
