    <style>
      .jumbotron{
          background: #16543f1f; 
          height:auto;
      }
      .jumbotronTitle{
        color:#165446;
      }
      p,h4,h3,h2{
        color:#165446;
      }
      .panel{
        text-align: center;
        background: #1654443b; 
      }
      .name{
          color:#165446;
          outline: none;   
      }
      .name:hover{
           color: #165446; 
      }
      .rate{
          color: white;
          background-color:#165446; 
          outline: none;   
      }
      .rate:hover{
          color: #1decbc;
          background-color:#165446; 
          outline: none; 
      }
    </style>


  <body>

    {{>header}}

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container-fluid bg-2 text-center">
        <h1 class="jumbotronTitle">Which is the Most Popular ï¼Ÿ</h1>
        <h2></h2>
